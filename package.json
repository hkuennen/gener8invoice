{
  "name": "gener8invoice",
  "version": "1.0.0",
  "description": "An Electron app built with React",
  "private": true,
  "proxy": "https://gener8invoice.onrender.com",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "source venv/bin/activate && cd api && gunicorn -b 0.0.0.0:8000 api.wsgi:application",
    "server:dev": "source venv/bin/activate && cd api && python3 manage.py runserver",
    "collectstatic": "source venv/bin/activate && cd api && python3 manage.py collectstatic",
    "electron": "electron .",
    "electron:build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "autoprefixer": "^10.4.15",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "node-gyp": "^11.0.0",
    "postcss": "^8.4.28",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@tailwindcss/forms": "^0.5.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "eslint-config-prettier": "^9.1.0",
    "js-cookie": "^3.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.80.6",
    "tree-kill": "^1.2.2",
    "web-vitals": "^2.1.4"
  },
  "build": {
    "appId": "com.gener8invoice.app",
    "productName": "Gener8Invoice",
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "asar": false,
    "files": [
      "api/**/*",
      "venv_dist/**/*",
      "public/**/*",
      "build/**/*",
      "package.json",
      "requirements.txt",
      "!dist/**/*",
      "!**/*.map",
      "!node_modules/**/*",
      "node_modules/tree-kill/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
